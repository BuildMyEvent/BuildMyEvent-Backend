{
    "version": 2,
    "rewrites": [
        {
          "source": "/:path*",
          "destination": "/app.ts"
        }
    ],
    "builds": [
        {
          "src": "app.ts", 
          "use": "@vercel/node", 
          "config": {
            "includeFiles": [
              "prisma/schema.prisma", 
              "prisma/seed.ts" 
            ]
          }
        }
      ],
    "routes": [
        {
          "src": "/(.*)", 
          "dest": "app.ts"
        }
    ]
}